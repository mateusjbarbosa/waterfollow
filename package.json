{
  "name": "waterfollow-api",
  "version": "0.3.0",
  "description": "API to handle requests of Waterfollow - An App to follow your hydration",
  "license": "UNLICENSED",
  "author": {
    "name": "Mateus Jos√© Barbosa",
    "email": "dev.mateusbarbosa@gmail.com",
    "url": "https://mateusjbarbosa.dev"
  },
  "scripts": {
    "build": "tsc",
    "migration:dev:run": "tsx --env-file=.env.development src/migrate.ts",
    "migration:generate": "drizzle-kit generate",
    "migration:staging:run": "tsx --env-file=.env.staging src/migrate.ts",
    "start:dev:api": "tsx --env-file=.env.development --watch src/api.ts",
    "start:dev:job": "tsx --env-file=.env.development --watch src/job.ts",
    "start:staging:api": "node --env-file=.env.staging dist/src/job.js",
    "start:staging:job": "node --env-file=.env.staging dist/src/job.js"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "2.2.2",
    "drizzle-orm": "0.32.0",
    "fastify": "4.28.1",
    "node-cron": "3.0.3",
    "postgres": "3.4.4",
    "resend": "3.4.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@types/node": "20.14.10",
    "@types/node-cron": "3.0.11",
    "drizzle-kit": "0.23.0",
    "tsx": "4.16.2",
    "typescript": "5.5.3"
  }
}
