{
  "name": "waterfollow-api",
  "version": "1.1.1",
  "description": "API to handle requests of Waterfollow - An App to follow your hydration",
  "license": "UNLICENSED",
  "author": {
    "name": "Mateus Jos√© Barbosa",
    "email": "dev.mateusbarbosa@gmail.com",
    "url": "https://mateusjbarbosa.dev"
  },
  "config": {
    "env_dev": ".env.development",
    "env_staging": ".env.staging"
  },
  "scripts": {
    "build": "tsc",
    "migration:dev:run": "tsx --env-file=$npm_package_config_env_dev src/migrate.ts",
    "migration:generate": "drizzle-kit generate",
    "migration:staging:run": "tsx src/migrate.ts",
    "start:dev:api": "tsx --watch --env-file=%npm_package_config_env_dev% src/api.ts",
    "start:staging:api": "node dist/src/api.js"
  },
  "dependencies": {
    "@fastify/cors": "9.0.1",
    "@paralleldrive/cuid2": "2.2.2",
    "dayjs": "1.11.11",
    "drizzle-orm": "0.32.0",
    "fastify": "4.28.1",
    "node-cron": "3.0.3",
    "postgres": "3.4.4",
    "resend": "3.4.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@types/node": "20.14.10",
    "@types/node-cron": "3.0.11",
    "drizzle-kit": "0.23.0",
    "tsx": "4.16.2",
    "typescript": "5.5.3"
  }
}
